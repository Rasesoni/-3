#include <iostream>

using namespace std;
// создать длинное чисо заданой длины - сгенерировать
// массив num[count]
// nu7m [0] ---младший разряд числа
// num{count - 1] - старший разряд числа
int main(){
    setlocate(LC_ALL, "Russian");
    srand((unsigned)time(NULL));
    srand((unsigned)rand());
    int count = 0;
    cout << " enter chislo";
    cin >> count;
    int* num= new int[count]; // Создание динамического массива - new выделяет пямять в куче
    for(int i =0; i < count; i++){
        num[i]=rand()%10; // от 0 до 9 включительно
    }
    int hnum = 0;
    while(true){
        hnum = rand()%10;
        if (hnum !=0) break;
    }
    num[count-1]=hnum;
    cout << " nvoe chislo"<< endl;
    for (int i = count - 1; i>=0;i++){
        cout << num[i] << " ";
    }
    cout << endl;
    delete[] num;
}
