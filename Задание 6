#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;
unsigned int polovina_ost(unsigned int delim, unsigned int delit, unsigned int ostatok) {
    if (delit == 0) {
        cout << "Ошибка: деление на ноль!" << endl;
        delim = 0;
        return 0;
    }
    unsigned int left = 0;
    unsigned int right = delim;
    unsigned int chastnoe = 0;
    while (left <= right) {
        unsigned int mid = left + (right - left) / 2;
        unsigned long long product = (unsigned long long)mid * delit;
        if (product == delim) {
            chastnoe = mid;
            break;
        }
        else if (product < delim) {
            chastnoe = mid;
            left = mid + 1;
        }
        else {
            if (mid == 0) break;
            right = mid - 1;
        }
    }
    ostatok = delim - chastnoe * delit;
    return chastnoe;
}
int main() {
    setlocale(LC_ALL, "Russian");
    srand(static_cast<unsigned int>(time(NULL)));
    unsigned int a = rand() % 1000;
    unsigned int b = rand() % 1000;
    cout << "Делимое: " << a << endl;
    cout << "Делитель: " << b << endl;
    unsigned int remainder = 0;
    unsigned int quotient = polovina_ost(a, b, remainder);
    cout << "Частное: " << quotient << endl;
    cout << "Остаток: " << remainder << endl;
    return 0;
}
